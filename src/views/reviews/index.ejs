<% layout('layouts/boilerplate') %>

  <h1>Reviews index</h1>
  <h3> List of all reviews: </h3>

  <% for (let review of reviews) { %>
    <!-- <hr class="mt-0 mb-3"> -->
    <div class="card my-2 p-2">
      <div class="row">
        <div class="col-11">
          <p class="card-text"> <a href="/campgrounds/<%= review.campgroundId %>" style="text-decoration: none"> <%= review.campgroundTitle%> </a> : <%= review.body %> <% for (let i = 1; i <= review.rating; i++) { %> ⭐ <% } %> </p>
        </div>
        <div class="col-1 px-3">
          <a href="/campgrounds/<%= review.campgroundId %>" style="text-decoration: none">✏️</a>
          <a href="/reviews/<%= review.id %>/delete" style="text-decoration: none">🗑️</a>
        </div>
      </div>
    </div>
  <% } %>

</body>
</html>

