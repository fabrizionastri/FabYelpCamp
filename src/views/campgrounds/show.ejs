<% layout('layouts/boilerplate') %>

<div class="col-12 offset-1 my-3">

  <!-- First row with title -->
  <div class="row">
    <h1><%= campground.title %> </h1>
  </div>
  
  <!-- Second row with content -->
  <div class="row">
    <!-- First column with campground info -->
    <div class="col-md-6" id="description">
      <div class="card mb-3">
        <img src="<%= campground.image %>"  class="img-fluid" alt="...">
        <div class="card-body">
            <h5><b><%= campground.title %></b></h5>
            <p class="card-text"><%= campground.description %></p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Location: <%= campground.location %> <br>
              Price: <%= campground.price %> €/night<br>
              Campground ID: <%= campground.id %></li>
        </ul>Review
        <div class="card-body">
          <a href="/campgrounds/<%= campground.id %>/edit" class="card-link btn btn-info my-3 col-2">  Edit  </a>
        </div>
        <div class="card-footer text-muted">
          <form class="d-inline" action="/campgrounds/<%= campground.id %>?_method=DELETE" method="POST" id="delete-campground">
            <button>DELETE</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Second column with reviews -->
    <div class="col-md-6" id="reviews">
      
      <h3 class="mt-3">Leave a review</h3>
      <!-- It is important to add "validated-form" to the class, so that the bootsrap validation rules from the boilerplate is used. Also important to use the novalidate parameter -->
      <form action="/campgrounds/<%= campground.id %>/addreview" method="POST" class="mt-3 validated-form" id="reviewForm" novalidate>
        <div class="mt-3">
          <label for="rating">Rating</label>
          <input type="range" name="review[rating]" id="rating" min="1" max="5" step="1" value="5" default="3">
        </div>
        <div> 
          <label for="body" class="form-label">Review</label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea><br>
          <!-- <div class="valid-feedback mb-3 mt-0">Looks good</div> -->
          <div class="invalid-feedback mb-3 mt-0" >Cannot be blank</div>
        </div>
        <button class="btn btn-primary">Submit</button>
      </form>

      <h3 class="mt-3">Reviews</h3>
      <div id="review-list">
        <% for (let review of campground.reviews) { %>
          <hr class="mt-0 mb-3">
          <div class="row">
            <div class="col-11">
              <p class="card-text"><%= review.rating %>* : <%= review.body %></p>
            </div>
            <div class="col-1">
              <form action="/campgrounds/<%= campground.id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn">✕</button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
        <br><br>
    </div>
  </div>
</div>

<!-- a script that displays a popup when the user tries to delete a campground asking for confirmation -->
<script>
  document.querySelector('#delete-campground').addEventListener('submit', function(e) {
    if (!confirm('Are you sure you want to delete this campground?')) {
      e.preventDefault();
    }
  });
</script>
