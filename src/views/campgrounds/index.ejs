<% layout('layouts/boilerplate') %>

  <h1>Campgrounds index</h1>
  
  <h4>Gallery</h4>
    <% for (let camp of campgrounds) { %> 
      <div class="card mb-3" >
        <div class="row">
          <div class="col-md-4">
            <img src="<%= camp.image %>" class="card-img-top" alt="...">
          </div>
          <div class="col-md-8">
            <h5 class="card-title mt-2 mx-2"><%= camp.title %></h5>
            <p class="card-text mx-2"><%= camp.location %> : <%= camp.price %> €/night</p>
            <p class="card-text mx-2"><%= camp.description %>
            <p class="text-end mx-2"><a href="/campgrounds/<%= camp._id %>" class="btn btn-primary me-3">Details</a></p>
          </div>
        </div>
      </div>
    <% } %>

<h4>List</h4>
  <ul>
    <% for (let camp of campgrounds) { %> 
      <li> <b> <%= camp.title %></b>, <%= camp.location %> : <%= camp.price %> €/night <a href="/campgrounds/<%= camp._id %>" style="text-decoration: none"> 👁️‍🗨️</a></li>
    <% } %>
  </ul>